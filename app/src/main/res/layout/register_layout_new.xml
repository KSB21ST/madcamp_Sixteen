<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="17.5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="2.5dp"
            android:layout_marginLeft="5dp"
            />
        <Button
            android:id="@+id/btn_close_register"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_close"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore 16 personalities around you!"
        android:textSize="12dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_email"
        android:hint="Email"
        android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_name"
        android:hint="Name"
        android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_phoneNumber"
        android:hint="Phone number"
        android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_password"
        android:hint="Password"
        android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <Spinner
        android:id="@+id/register_mbti"
        android:textSize="9dp"
        android:spinnerMode="dropdown"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"/>
    <!--        android:theme="@style/SpinnerDivideStyle"-->
    <!--        android:background="@drawable/background_spinner"-->
    />

    <TextView
        android:id="@+id/link_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't know your mbti?"
        android:textSize="10dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btn_photo"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text ="photo"
        android:layout_alignParentRight="true"
        />
    <Button
        android:id="@+id/btn_next"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text ="next"
        android:layout_alignParentRight="true"
        />


    <!--    <Button-->
    <!--        android:id="@+id/btn_register"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="Register" />-->
</LinearLayout>