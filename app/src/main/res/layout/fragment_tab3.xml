<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:orientation="horizontal"
        android:background="@drawable/shape_namecard"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/tab3_img"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="30dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="185dp"
            android:layout_marginBottom="37.5dp"
            >
            <TextView
                android:id="@+id/name_tab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="name"
                android:textSize="12.5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
            <TextView
                android:id="@+id/mbti_tab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="mbti"
                android:textSize="10sp"
                android:textColor="@android:color/white" />
            <TextView
                android:id="@+id/phonenumber_tab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="phonenumber"
                android:textSize="10sp"
                android:textColor="@android:color/white" />
            <TextView
                android:id="@+id/email_tab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="email"
                android:textSize="10sp"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <Button android:id="@+id/btn_edit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_more"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_to"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="My Favorites"
                android:background="@drawable/shape_btn_like"
                android:textColor="#000000"
                android:textSize="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="7.5dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_likeme"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Who likes me"
                android:textColor="#000000"
                android:background="@drawable/shape_btn_like"
                android:textSize="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="7.5dp"
                android:layout_weight="1"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_randcall"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Random Call"
            android:textColor="#FFFFFF"
            android:textSize="10dp"
            android:background="@drawable/shape_btn_randcall"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project Mate Match"
            android:textSize="10dp"
            android:layout_marginBottom="5dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#888888"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btn_topics"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Project Interest"
            android:textColor="#000000"
            android:background="@drawable/shape_btn_like"
            android:textSize="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</LinearLayout>